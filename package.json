{
    "private": true,
    "scripts": {
        "start-tailwind": "npx tailwindcss -i ./resources/css/input.css -o ./public/css/tailwind.css --watch",
        "stop-tailwind": "npx tailwindcss -o ./public/css/tailwind.min.css --minify",
        "dev": "npm run development",
        "development": "mix",
        "watch": "mix watch",
        "watch-poll": "mix watch -- --watch-options-poll=1000",
        "hot": "mix watch --hot",
        "prod": "npm run production",
        "production": "mix --production"
    },
    "devDependencies": {
        "autoprefixer": "^10.4.2",
        "axios": "^0.25",
        "laravel-mix": "^6.0.6",
        "lodash": "^4.17.19",
        "postcss": "^8.4.6",
        "tailwindcss": "^3.0.21"
    }
}
